<odoo>
    <record id="view_conge_employee_tree" model="ir.ui.view">
        <field name="name">conge.employee.tree</field>
        <field name="model">conge.employee</field>
        <field name="arch" type="xml">
            <tree string="Employee">
                <field name="lastname"/>
                <field name="firstname"/>
                <field name="mail"/>
                <field name="matricule"/>
                <field name="poste_id"/>
            </tree>
        </field>
    </record>

    <record id="view_conge_employee_form" model="ir.ui.view">
        <field name="name">conge.employee.form</field>
        <field name="model">conge.employee</field>
        <field name="arch" type="xml">
            <form string="Book Form">
                <sheet>
                    <group>
                        <field name="lastname"/>
                        <field name="firstname"/>
                        <field name="mail"/>
                        <field name="matricule"/>
                        <field name="poste_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
